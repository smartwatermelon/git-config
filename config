# This is Git's per-user configuration file.
# https://blog.gitbutler.com/how-git-core-devs-configure-git/
[user]
	email = andrew.rich@gmail.com
	name = Andrew Rich
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[init]
	defaultBranch = main
[diff]
	# Custom prefixes for better diff readability (SRC/DST instead of a/b)
	srcPrefix = "SRC "
	dstPrefix = "DST "
	# Histogram algorithm: better rename detection than Myers
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true       # Remove stale remote-tracking branches
	pruneTags = true   # Remove stale tags
	all = true         # Fetch from all remotes (not just origin)
[help]
	autocorrect = prompt
[commit]
	verbose = true
[rerere]
	enabled = true
	autoupdate = true
[core]
	excludesfile = /Users/andrewrich/.config/git/gitignore_global
	# Performance optimizations
	fsmonitor = true          # File system monitor for large repos
	untrackedCache = true      # Cache untracked files list
	hooksPath = /Users/andrewrich/.config/git/hooks
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[merge]
	conflictstyle = zdiff3
[pull]
	rebase = true
